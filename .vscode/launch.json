{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app",
                    "remoteRoot": "/app/src"
                }
            ]
        }
        ,
        {
            "name": "Music Assistant Alexa Skill: Server",
            "type": "debugpy",
            "request": "launch",
            "module": "app",
            "python": "${workspaceFolder}/venv/bin/python",
            "cwd": "${workspaceFolder}/app",
            "justMyCode": false,
            "args": [],
            "env": {
                "PYTHONDEVMODE": "1",
                "AWS_DEFAULT_REGION": "us-east-1",
                "AWS_REGION": "us-east-1",
                "PORT": "5000"
            },
            "console": "integratedTerminal"
        }
    ]
}